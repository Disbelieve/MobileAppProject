<Page
    x:Class="HartRevalidatieApplication.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HartRevalidatieApplication.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="11.5*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#50D6CF">
            <TextBlock Text="Registreren stap 1 van 2" 
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="50 0 0 0"
                       FontWeight="SemiBold"
                       FontSize="20"/>
        </Border>

        <Button Grid.Row="0" FontFamily="Segoe MDL2 Assets" 
                Content="&#xE112;" FontWeight="SemiBold" FontSize="20"
                Background="Transparent" Click="Back_Click"
                Foreground="White" Margin="0 2.5 0 0"></Button>

        <StackPanel Grid.Row="1" Margin="30">
            <TextBox Name="NameTextBox" PlaceholderText="Vul uw naam in"/>
            <CalendarDatePicker Name="BirthDateTextBox" Margin="0 20 0 0" HorizontalAlignment="Stretch"
                     PlaceholderText="Uw geboortedatum"
                     Background="#EEEEEE"/>
            <ComboBox Name="ConsultantTextBox" Margin="0 20 0 0" HorizontalAlignment="Stretch"
                      ItemsSource="{Binding consultants}"
                      SelectedValuePath="_id"
                      PlaceholderText="Selecteer uw consulent"
                      Background="#EEEEEE">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="{Binding firstname}"/>
                            <Run Text="{Binding lastname}"/>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Text="Geslacht bij geboorte" Margin="0 25 0 0"
                     FontWeight="SemiBold"/>
            <RadioButton Name="IsMale" Margin="30 0 0 0" Content="Man"/>
            <RadioButton Name="IsFemale" Margin="30 0 0 0" Content="Vrouw"/>

            <Button Margin="50 30 50 0" Background="#50D6CF" FontSize="17"
                Foreground="White" Grid.Row="2" Click="Next_Click" 
                HorizontalAlignment="Stretch">Volgende</Button>
        </StackPanel>
    </Grid>
</Page>
